    Layout = "~/Views/Shared/_DashboardLayoutAdmin.cshtml";
}

@model HomeViewModel



<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <!-- Page pre-title -->
                @*  <div class="page-pretitle">
                Overview
                </div>*@
                <h2 class="page-title">
                    Home Info Page
                </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
                <div class="btn-list">
                    @*  <span class="d-none d-sm-inline">
                    <a href="#" class="btn">
                    New view
                    </a>
                    </span>*@
          
                    <a href="#" class="btn btn-primary d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#modal-report" aria-label="Create new report">
                        <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page body -->
<div class="page-body">
    <div class="container-xl">


        <div class="card">
            <div class="table-responsive" style="padding : 20px; ">
                <table id="example" class="table card-table table-vcenter text-nowrap datatable" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Home Website Name</th>
                            <th>Home Title</th>
                            <th>Home Desc</th>
                            <th>Edit</th>
                            
                          

                        </tr>
                    </thead>
                    <tbody>

                        <!-- Additional rows as needed -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="modal modal-blur fade" id="modal-edit" tabindex="-1" style="display: none;" aria-modal="true">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Home</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editForm" class="" asp-action="Edit" asp-controller="HomeInformations" method="post" enctype="multipart/form-data" >

                    <input asp-for="HomeId" type="text" style="display:none">
                    <div class="mb-3">
                        <label class="form-label" asp-for="HomeWebsiteName">Home Website Name</label>
                        <input asp-for="HomeWebsiteName" type="text" class="form-control"  />
                        <span asp-validation-for="HomeWebsiteName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="HomeTitle">Home Title</label>
                        <input asp-for="HomeTitle" type="text" class="form-control" />
                        <span asp-validation-for="HomeTitle" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="HomeDesc">Home Desc</label>
                        <input asp-for="HomeDesc" type="text" class="form-control"  />
                        <span asp-validation-for="HomeDesc" class="text-danger"></span>
                    </div>
                     <div class="mb-3">
                        <label class="form-label" asp-for="HomeImageFile">Home Image File</label>
                        <input asp-for="HomeImageFile" type="file" class="form-control" />
                        <span asp-validation-for="HomeImageFile" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Home Image</label>
                        <img id='homeImage' alt="Description of your image" width="100%" height="200" style="border-radius: 10px;object-fit: contain;">
                    </div>

                      <div class="mb-3">
                        <label class="form-label" asp-for="HomeLogoFile">Home Logo File</label>
                        <input asp-for="HomeLogoFile" type="file" class="form-control"  />
                        <span asp-validation-for="HomeLogoFile" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Home Logo</label>
                        <img id='homeLogo' alt="Description of your image" width="100%" height="200" style="border-radius: 10px;object-fit: contain;">
                    </div>

              
                    <div class="mb-3">
                        <label class="form-label" asp-for="WorkingDays">Working Days</label>
                        <textarea asp-for="WorkingDays" type="text" class="form-control" ></textarea>
                        <span asp-validation-for="WorkingDays" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="FacbookLink">Facbook Link</label>
                        <input asp-for="FacbookLink" type="text" class="form-control" />
                        <span asp-validation-for="FacbookLink" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="YoutubeLink">Youtube Link</label>
                        <input asp-for="YoutubeLink" type="text" class="form-control" />
                        <span asp-validation-for="YoutubeLink" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="InsLink">Instagram Link</label>
                        <input asp-for="InsLink" type="text" class="form-control" />
                        <span asp-validation-for="InsLink" class="text-danger"></span>
                    </div>


                

                </form>
            </div>
            <div class="modal-footer">
                <a class="btn btn-link link-secondary" data-bs-dismiss="modal">
                    Cancel
                </a>
                <button type="submit" form="editForm" class="btn btn-primary ms-auto">
                    <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M12 5l0 14"></path><path d="M5 12l14 0"></path></svg>
                    Edit
                </button>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script>
       

        document.addEventListener('DOMContentLoaded', function () {
            var table = $('#example').DataTable({
                responsive: true,
                "scrollX": true,
                "pagingType": "full_numbers",
                "pageLength": 5,
                "lengthChange": true,
                "ajax": '@Url.Action("LoadData", "HomeInformations")',
                "columns": [
                    { "data": "homeId" },
                    { "data": "homeWebsiteName" },
                    { "data": "homeTitle" },
                    { "data": "homeDesc" },
                    {
                        "data": null, // Edit column
                        "defaultContent": "<button data-bs-toggle=\"modal\" data-bs-target=\"#modal-edit\" class=\"btn btn-info \">Edit</button>",
                        "orderable": false
                    }

                ],
                "lengthMenu": [5, 10, 15, 20],
                "language": {
                    "paginate": {
                        "first": '<<',  // Change as per need
                        "last": '>>',  // Change as per need
                        "next": '>',  // Change as per need
                        "previous": '<'  // Change as per need
                    }
                },


            });

            $('#example tbody').on('click', 'button', function () {
                var action = this.textContent.trim();
                var rowData = table.row($(this).parents('tr')).data();
                var homeId = rowData['homeId'];

                if (action === 'Edit') {
                    $.ajax({
                        url: '@Url.Action("GetHomeInfoById", "HomeInformations")',
                        type: 'GET',
                        data: { id: homeId },
                        success: function (data) {
                         
                            var edit = document.getElementById("editForm");
                            edit.HomeWebsiteName.value = data.homeWebsiteName;
                            edit.HomeTitle.value = data.homeTitle;
                            edit.HomeDesc.value = data.homeDesc;
                            edit.WorkingDays.value = data.workingDays;
                            edit.FacbookLink.value = data.facbookLink;
                            edit.YoutubeLink.value = data.youtubeLink;
                            edit.InsLink.value = data.insLink;

                            edit.homeImage.src = '/images/' + data.homeImage;
                            edit.homeLogo.src = '/images/' + data.homeLogo;

                            edit.HomeId.value = homeId;
                            edit.action = "@Url.Action("Edit", "HomeInformations")/" + homeId;

                           
                        },
                        error: function (xhr, textStatus, errorThrown) {
                            console.log('Error fetching user data:', errorThrown);
                        }
                    });
                } 
                
            });
    


        });








    </script>
}


