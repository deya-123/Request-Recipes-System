<script>
        document.addEventListener('DOMContentLoaded', function() {
            var testimonialItems = document.querySelectorAll('.testimonial__item');
            var maxHeight = 0;

            // Find the maximum height
            testimonialItems.forEach(function(item) {
                var itemHeight = item.offsetHeight;
                if (itemHeight > maxHeight) {
                    maxHeight = itemHeight;
                }
            });

            // Set all items to the maximum height
            testimonialItems.forEach(function(item) {
                item.style.height = maxHeight + 'px';
            });


            document.getElementById("recipesCount").innerHTML = @recipesCount;
            document.getElementById("chiefsCount").innerHTML=@chiefsCount;
            document.getElementById("usersCount").innerHTML = @usersCount;

            document.querySelectorAll('.category-item-event').forEach(item => {
            item.addEventListener('click', function () {
                
                var catId = this.getAttribute('data-catid');
                var typeId = this.getAttribute('data-typeid');

                
                localStorage.setItem('selectedCatId', catId);
                localStorage.setItem('selectedTypeId', typeId);

               
                window.location.href = 'Home\\RecipeBlog'; // Replace 'recipeblog-page-url' with your actual URL
            });


        });

        document.querySelectorAll('.chief-item-event').forEach(item => {
            item.addEventListener('click', function () {

                var chiefid = this.getAttribute('data-chiefid');
          


                localStorage.setItem('selectedChiefId', chiefid);
             


                window.location.href = 'Home\\RecipeBlog'; // Replace 'recipeblog-page-url' with your actual URL
            });


        });
        });
    </script>