            <div class="col-lg-8">
                <div class="contact__form">
                    <form id="createForm" class="" asp-action="Create" asp-controller="Contacts" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <input asp-for="ContactSenderName" type="text" class="form-control" placeholder="Enter Text" />
                                <span asp-validation-for="ContactSenderName" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6">
                                <input asp-for="ContactSenderEmail" type="text" class="form-control" placeholder="Enter Text" />
                                <span asp-validation-for="ContactSenderEmail" class="text-danger"></span>
                            </div>
                            <div class="col-lg-12">
