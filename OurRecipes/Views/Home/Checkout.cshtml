@{

    Layout = "~/Views/Shared/_HomeLayout.cshtml";

    
    var recipe = (Recipe)ViewBag.RecipeForOrdering;
}


@model PlaceOrderViewModel
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>Checkout</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a href="./index.html">Home</a>
                    <span>Checkout</span>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <form asp-action="PlaceOrder" asp-controller="Orders">
                <input asp-for="RecipeId" value="@recipe.RecipeId" style="display:none;" type="text" class="form-control" placeholder="" />
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                      
                        <h6 class="checkout__title">Billing Details</h6>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="checkout__input">
                                    <p>Holder Name</p>
                                    <input asp-for="CardHolderName" style="font-size: larger !important;" type="text" class="form-control" placeholder="" />
                                    <span asp-validation-for="CardHolderName" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="checkout__input" >
                                    <p>Cvv</p>
                                    <input asp-for="CardCvv" style="font-size: larger !important;" type="text" class="form-control" placeholder="" />
                                    <span asp-validation-for="CardCvv" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="checkout__input">
                                    <p>Expire Date</p>
                                    <input asp-for="CardExpireDate" style="font-size: larger !important;" type="text" class="form-control" placeholder="" />
                                    <span asp-validation-for="CardExpireDate" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Card Number</p>
                            <input asp-for="CardNumber" style="font-size: larger !important;" type="text" class="form-control" placeholder="" />
                            <span asp-validation-for="CardNumber" class="text-danger"></span>

                        </div>
                      
                    
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h6 class="order__title">Your order</h6>
                            <div class="checkout__order__products">Product <span>Total</span></div>
                            <ul class="checkout__total__products">
                                <li><samp></samp> @recipe.RecipeName <span>$ @recipe.RecipePrice</span></li>
                             
                            </ul>
                            <ul class="checkout__total__all">
                                <li>Total <span>$ @recipe.RecipePrice</span></li>
                                <li>Total with tax <span>$ @recipe.RecipePrice</span></li>
                            </ul>
                       
                  
                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>